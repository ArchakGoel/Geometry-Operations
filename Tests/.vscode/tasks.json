{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Tests",
            "type": "shell",
            "command":  "/usr/bin/clang++",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "args": [
                "-std=c++17",
                "-g",
                "-Wall",
                "-Wextra",
                "-I",
                "${workspaceFolder:GeometryRoot}/src",
                "-I",
                "/opt/homebrew/opt/googletest/include",
                "${workspaceFolder}/LineIntersectionTests.cpp",
                "${workspaceFolder}/CrossAndDotCalculatorTests.cpp",
                "${workspaceFolder:GeometryRoot}/src/Vector3D.cpp",
                "${workspaceFolder:GeometryRoot}/src/Point.cpp",
                "${workspaceFolder:GeometryRoot}/src/Line.cpp",
                "${workspaceFolder:GeometryRoot}/src/MathUtils.cpp",
                "${workspaceFolder:GeometryRoot}/src/GeomUtils.cpp",
                "-L",
                "/opt/homebrew/opt/googletest/lib",
                "-lgtest",
                "-lgtest_main",
                "-pthread",
                "-o",
                "${workspaceFolder:GeometryRoot}/build/Tests/GeometryOperations/geomUtilsTests"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "${workspaceFolder:GeometryRoot}/build/Tests/GeometryOperations/geomUtilsTests",
            "dependsOn": "Build Tests",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Clear Build Tests",
            "type": "shell",
            "command": "bash",
            "args": [
            "-c",
            "rm -rf \"${workspaceFolder:GeometryRoot}/build/Tests/GeometryOperations\" && mkdir -p \"${workspaceFolder:GeometryRoot}/build/Tests/GeometryOperations\""
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}