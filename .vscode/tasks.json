{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build main",
            "type": "shell",
            "command": "/usr/bin/clang++",
            "args": [
              "-std=c++17",
              "-stdlib=libc++",
              "-isysroot",
              "/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk",
              "-I", "${workspaceFolder}/src",
              "-I", "${workspaceFolder}/Tests",
              "-g",
              "src/main.cpp",
              "src/Vector3D.cpp",
              "src/Point.cpp",
              "src/Line.cpp",
              "src/Plane.cpp",
              "src/GeomUtils.cpp",
              "src/MathUtils.cpp",
              "-o", "build/MainBuild/main"
            ],
            "options": {
              "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
              "kind": "build",
              "isDefault": true
            },
            "detail": "Builds main.cpp and all required implementation files"
        },
        {
            "label": "Run main",
            "type": "shell",
            "command": "./build/main",
            "options": {
              "cwd": "${workspaceFolder}",
              "terminal": "integrated"
            },
            "group": {
              "kind": "test",
              "isDefault": false
            }
        },
        {
            "label": "Clear build main",
            "type": "shell",
            "command": "bash",
            "args": [
              "-c",
              "rm -rf build/MainBuild && mkdir -p build/MainBuild"
            ],
            "options": {
              "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": {
              "kind": "build",
              "isDefault": false
            }
          }
    ]
}